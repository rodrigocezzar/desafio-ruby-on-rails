<% if @transaction.empty? %>
  <h2 >Por Favor Insira um arquivo .TXT.</h2>
<% else %>
  <table class="table1">
  <h2 class="table2">Resumo das Transações</h2>
    <tr class="titles">
      <th>Estabelecimento</th>
      <th>Proprietário</th>      
      <th>Data e Hora</th>
      <th>CPF</th>
      <th>Cartão</th>
      <th>Valor R$</th>
      <th>Tipo da Operação</th>
    <% @transaction.each do |t| %>
      <tr>
       <th><%= t.store %></th>
       <th><%= t.owner %></th>       
       <th><%= t.time %></th>       
       <th><%= t.cpf %></th>
       <th><%= t.card %></th>
       <th><%= t.value %></th>
       <th><%= t.payment_type %></th>
      </tr>
    <% end %>  
  </table>  
<% end %>
    <div class="links2">
      <%= link_to('Home', root_path) %> 
    </div>
    <div class="links2">
      <%= link_to('Saldos', transactions_balance_path) %> 
    </div>